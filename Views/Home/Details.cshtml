@model WebFoodApp.Models.MonAn

@{
    ViewBag.Title = "Details";
}

<!-- Begin Li's Breadcrumb Area -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active">Product Detail</li>
            </ul>
        </div>
    </div>
</div>
<!-- Li's Breadcrumb Area End Here -->
<!-- content-wraper start -->
<div class="content-wraper pb-60">
    <div class="container">
        <div class="row single-product-area d-flex align-items-center">
            <div class="col-lg-5 col-md-6">
                <!-- Product Details Left -->
                <div class="product-details-left">
                    <div class="product-details-images slider-navigation-1">
                        <div class="lg-image">
                            <a class="popup-img venobox vbox-item" href="~/proimages/FoodImg/@Model.AnhMA" data-gall="myGallery">
                                <img src="~/proimages/FoodImg/@Model.AnhMA" alt="@Model.TenMA">
                            </a>
                        </div>
                    </div>
                </div>
                <!--// Product Details Left -->
            </div>

            <div class="col-lg-7 col-md-6">
                <div class="product-details-view-content pt-60">
                    <div class="product-info">
                        <h2>@Model.TenMA</h2>
                        <span class="product-details-ref">Reference: demo_15</span>
                        <div class="rating-box pt-20">
                            <ul class="rating rating-with-review-item">
                                <li><i class="fa-regular fa-star"></i></li>
                                <li><i class="fa-regular fa-star"></i></li>
                                <li><i class="fa-regular fa-star"></i></li>
                                <li class="no-star"><i class="fa-regular fa-star"></i></li>
                                <li class="no-star"><i class="fa-regular fa-star"></i></li>
                                <li class="review-item"><a href="#">Read Review</a></li>
                                <li class="review-item"><a href="#">Write Review</a></li>
                            </ul>
                        </div>
                        <div class="price-box pt-20">
                            <span class="new-price new-price-2">@Model.GiaBan VNĐ</span>
                        </div>
                        <div class="product-desc">
                            <p>
                                <span>@Model.ThanhPhan</span>
                            </p>
                        </div>
                        <div class="product-variants">
                            <div class="produt-variants-size">
                                <label>Size</label>
                                <select class="nice-select">
                                    <option value="1" title="all" selected="selected">All</option>
                                    <option value="2" title="S">S</option>
                                    <option value="3" title="M">M</option>
                                    <option value="4" title="L">L</option>
                                </select>
                            </div>
                        </div>
                        <div class="single-add-to-cart">
                            <form action="#" class="cart-quantity">
                                <div class="quantity">
                                    <label>Quantity</label>
                                    <div class="cart-plus-minus">
                                        <input class="cart-plus-minus-box" value="1" type="text">
                                        <div class="dec qtybutton"><i class="fa fa-angle-down"></i></div>
                                        <div class="inc qtybutton"><i class="fa fa-angle-up"></i></div>
                                    </div>
                                </div>
                                <button class="add-to-cart" type="submit">
                                    <a href="@Url.Action("ThemGiohang", "ShoppingCart", new { @IMaMA = @Model.MaMA, @strURL=Request.Url.ToString() })">
                                        Đặt hàng
                                    </a>
                                </button>
                            </form>
                        </div>                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- content-wraper end -->
